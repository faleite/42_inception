# Basic config
[mysqld]
user = mysql
port = 3306
datadir = /var/lib/mysql
socket = /var/run/mysqld/mysqld.sock
# skip-networking

# Security config
bind-address = 0.0.0.0

# Connections limit
max_connections = 100
max_user_connections = 50

# Perfome config
innodb_buffer_pool_size = 128M
query_cache_size = 16M